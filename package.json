{
  "name": "bailo",
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "cy:open": "npm --prefix ./frontend/ run cy:open",
    "cy:run": "npm --prefix ./frontend/ run cy:run",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "style": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-style": "prettier --check \"**/*.{ts,tsx,md}\""
  },
  "workspaces": [
    "lib/shared",
    "lib/node",
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "prettier": "^2.8.4",
    "turbo": "^1.8.2"
  }
}
